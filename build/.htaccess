# .htaccess para Build da SuperLoja React SPA
# Configuração otimizada para produção

# Enable GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Enable browser caching
<IfModule mod_expires.c>
    ExpiresActive on
    # Cache estático por 1 ano
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/eot "access plus 1 year"
    
    # Cache HTML por 1 hora
    ExpiresByType text/html "access plus 1 hour"
    
    # Cache JSON por 1 dia
    ExpiresByType application/json "access plus 1 day"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache control para arquivos estáticos
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache control para HTML
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
</IfModule>

# Redirect to HTTPS (descomente se SSL estiver disponível)
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Handle React Router - redirect all requests to index.html
RewriteEngine On
RewriteBase /

# Processar arquivos PHP na pasta /api/
<FilesMatch "\.(php)$">
    SetHandler application/x-httpd-php
</FilesMatch>

# 1. Permitir acesso direto a arquivos estáticos existentes
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule .* - [L]

# 2. Permitir acesso a diretórios existentes
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .* - [L]

# 3. Processar APIs PHP - permitir acesso à pasta /api/
RewriteCond %{REQUEST_URI} ^/api/ [NC]
RewriteRule .* - [L]

# 4. Redirecionar todas as outras requisições para index.html (React Router)
# Excluir arquivos com extensões específicas para evitar loops
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|map|json|xml|txt|pdf|zip|rar|mp4|mp3|avi|mov|wmv|flv|swf|html)$ [NC]
RewriteRule ^(.*)$ /index.html [L,QSA]

# Tratar rotas específicas da aplicação React
# Home page
RewriteRule ^$ /index.html [L]

# Rotas da aplicação
RewriteRule ^(produto|categoria|catalogo|leiloes|contato|admin|carrinho|checkout|perfil|pedidos|favoritos)(/.*)?$ /index.html [L,QSA]

# Block access to sensitive files
<FilesMatch "\.(env|htaccess|htpasswd|git|gitignore|gitmodules)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block access to source map files in production
<FilesMatch "\.map$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block access to config files
<FilesMatch "\.(json|lock|md|txt|log)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Allow specific files
<FilesMatch "^(manifest\.json|robots\.txt|sitemap\.xml|favicon\.ico)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Error pages
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# Prevent directory browsing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8
